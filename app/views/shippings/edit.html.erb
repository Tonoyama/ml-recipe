<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<span class="form-title"><i class="fas fa-map-marked-alt"></i> Edit Shipping</span>
			<span style="margin-left: 10px;font-size: 15px;">
				<%= link_to ">back", customers_shippings_path %>
			</span>
			<div id="error_explanation"><%= render "layouts/error", {object: @shipping} %></div>
			<%= form_with model: @shipping,url: customers_shipping_path,local: true do |f| %>
				<table class="table table-borderless" style="margin-top: 30px">
					<tr>
						<td style="width:25%">郵便番号<br>(ハイフンなし)</td>
						<td><%= f.text_field :postcode, id:"postcode" %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= f.text_field :address, style:"width:100%", id:"address" %></td>
					</tr>
					<tr>
						<td>宛名</td>
						<td><%= f.text_field :name %></td>
					</tr>
				</table>
			<div style="text-align:center">
				<%= f.submit "変更する", class:"btn btn-warning submit-btn" %>
			</div>
			<% end %>
		</div>
	</div>
</div>