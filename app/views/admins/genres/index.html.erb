<div class="container" style="padding-bottom: 100px;">
  <div class="row">
    <div class="col-lg-6">
      <span class="form-title">ジャンル一覧</span>
      <div style="margin-top: 20px;">
        <table class="table">
	        <thead class="thead-light">
	          <tr>
	            <th>ジャンル名</th>
	            <th></th>
	          </tr>
	        </thead>
	          <% @genres.each do |genre| %>
	          <tr>
	            <td class="align-middle"><%= genre.name %></td>
	            <td class="align-middle", style="text-align: center">
	              <%= link_to "編集する", edit_admins_genre_path(genre), class:"btn btn-warning"%>
	              <%= link_to "削除する", admins_genre_path(genre),method: :delete, class:"btn btn-danger", style:"margin-left: 10px", data: {confirm: "本当に削除してもよろしいですか？"} %>
	            </td>
	          </tr>
	          <% end %>
      	</table>
      </div>
    </div>

    <div class="col-lg-4 offset-lg-1">
      <span class="form-title">ジャンル追加</span>
      <% if flash[:error_messages].present? %>
        <ul>
          <% flash[:error_messages].each do |message| %>
            <div class="bad-flash"><i class="fas fa-exclamation-circle"></i>
              <%= message %>
            </div>
          <% end %>
        </ul>
      <% end %>
      <div style="margin-top: 20px;">
        <%= form_with(model: @genre, url: admins_genres_path,
            method: :post, local: true) do |f| %>
        <%= f.label :ジャンル名 %><br>
        <%= f.text_field :name %><br>
        <%= f.label :紹介文 %><br>
        <%= f.text_area :introduction, rows:"5", style:"width:500px" %><br>
        <%= f.submit '追加' ,class:"btn btn-warning submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>