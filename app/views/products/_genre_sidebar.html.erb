<div class="col-lg-2 col-sm-2 hidden-sp" style="margin-top: 50px;">
	<div style="border:1px solid black;text-align: center">
		<p style="border-bottom:1px solid black;font-weight: bold">ジャンル</p>
		<div class="genres">
			<% @genres.each do |genre| %>
				<div class="genre">
					<%= form_with url: products_path, method: :get, local: true do |f| %>
						<%= f.hidden_field :genre_id, :value => genre.id %>
						<%= f.submit genre.name, class:"genre_name" %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>