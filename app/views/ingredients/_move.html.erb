<div class="row">
	<div class="col-lg-5 col-5">
		<% unless ingredient.first? %>
			<%= link_to recipe_ingredient_move_path(recipe, ingredient, move: 'up'),
				class:"move-item", style:"margin-right: 10px;" , remote: true do %>
				<i class="far fa-arrow-alt-circle-up fa-lg" style="text-decoration: none;"></i>
			<% end %>
		<% end %>
	</div>
	<div class="col-lg-5 col-5">
		<% unless ingredient.last? %>
			<%= link_to recipe_ingredient_move_path(recipe, ingredient, move: 'down'),
				class:"move-item", remote: true do %>
				<i class="far fa-arrow-alt-circle-down fa-lg" style="text-decoration: none;"></i>
			<% end %>
		<% end %>
	</div>
</div>

